colorscheme --url https://raw.githubusercontent.com/devnullvoid/tridactyl/main/themes/catppuccin-macchiato.css catppuccin-macchiato
set smoothscroll true
set allowautofocus false

bind J tabnext
bind K tabprev

bind j scrollline 6
bind k scrollline -6
bind H scrollpx -50
bind L scrollpx 50
bind d scrollpage 0.4
bind e scrollpage -0.4

bind h back
bind l forward

bind x tabclose

bind gc tabduplicate
bind gd tabdetach
bind gD composite tabduplicate; tabdetach

bind --mode=ex <C-j> ex.next_completion
bind --mode=ex <C-k> ex.prev_completion
bind --mode=ex <C-n> ex.next_history
bind --mode=ex <C-p> ex.prev_history

seturl www.google.com followpagepatterns.next 次へ
seturl www.google.com followpagepatterns.prev 前へ

" vim: set ft=vim
