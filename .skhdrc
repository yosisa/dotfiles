# change desktop layout
shift + ctrl + alt + cmd - e : chunkc tiling::desktop --layout bsp
shift + ctrl + alt + cmd - r : chunkc tiling::desktop --layout monocle

# change window layout
shift + ctrl + alt + cmd - space : chunkc tiling::window --toggle float
shift + ctrl + alt + cmd - m : chunkc tiling::window --toggle fullscreen
shift + ctrl + alt + cmd - x : chunkc tiling::window --toggle native-fullscreen

# change focus
shift + ctrl + alt + cmd - h : chunkc tiling::window --focus west
shift + ctrl + alt + cmd - j : chunkc tiling::window --focus south
shift + ctrl + alt + cmd - k : chunkc tiling::window --focus north
shift + ctrl + alt + cmd - l : chunkc tiling::window --focus east
shift + ctrl + alt + cmd - p : chunkc tiling::window --focus prev
shift + ctrl + alt + cmd - n : chunkc tiling::window --focus next

# move focused window
ctrl + cmd - h : chunkc tiling::window --warp west
ctrl + cmd - j : chunkc tiling::window --warp south
ctrl + cmd - k : chunkc tiling::window --warp north
ctrl + cmd - l : chunkc tiling::window --warp east
shift + ctrl + alt + cmd - b : chunkc tiling::window --send-to-monitor prev
shift + ctrl + alt + cmd - f : chunkc tiling::window --send-to-monitor next

ctrl + cmd - s : chunkc tiling::window --swap west
ctrl + cmd - d : chunkc tiling::window --swap south
ctrl + cmd - e : chunkc tiling::window --swap north
ctrl + cmd - f : chunkc tiling::window --swap east

shift + ctrl + alt + cmd - z : chunkc tiling::desktop --rotate 90

# change window size
ctrl + alt - h : chunkc tiling::window --use-temporary-ratio 0.02 --adjust-window-edge west
ctrl + alt - j : chunkc tiling::window --use-temporary-ratio 0.02 --adjust-window-edge south
ctrl + alt - k : chunkc tiling::window --use-temporary-ratio 0.02 --adjust-window-edge north
ctrl + alt - l : chunkc tiling::window --use-temporary-ratio 0.02 --adjust-window-edge east
shift + ctrl + alt - h : chunkc tiling::window --use-temporary-ratio -0.02 --adjust-window-edge west
shift + ctrl + alt - j : chunkc tiling::window --use-temporary-ratio -0.02 --adjust-window-edge south
shift + ctrl + alt - k : chunkc tiling::window --use-temporary-ratio -0.02 --adjust-window-edge north
shift + ctrl + alt - l : chunkc tiling::window --use-temporary-ratio -0.02 --adjust-window-edge east
