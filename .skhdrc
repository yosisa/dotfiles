# focus window
alt - h : yabai -m window --focus west
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - l : yabai -m window --focus east

# swap window
alt + cmd - h : yabai -m window --swap west
alt + cmd - j : yabai -m window --swap south
alt + cmd - k : yabai -m window --swap north
alt + cmd - l : yabai -m window --swap east

# move window
alt + ctrl - h : yabai -m window --warp west
alt + ctrl - j : yabai -m window --warp south
alt + ctrl - k : yabai -m window --warp north
alt + ctrl - l : yabai -m window --warp east

alt - space : yabai -m space --balance

# multi monitor
alt - z : yabai -m display --focus recent
alt + ctrl - z : yabai -m window --display recent; yabai -m display --focus recent

# toggle window fullscreen zoom
alt - m : yabai -m window --toggle zoom-fullscreen

# toggle window parent zoom
alt - s : yabai -m window --toggle zoom-parent

# toggle desktop offset
alt + ctrl - x : yabai -m space --toggle padding; yabai -m space --toggle gap

# rotate tree
alt - r : yabai -m space --rotate 90

# mirror tree y-axis
alt - y : yabai -m space --mirror y-axis

# mirror tree x-axis
alt - x : yabai -m space --mirror x-axis

# float / unfloat window and center on screen
alt - t : yabai -m window --toggle float; yabai -m window --grid 4:4:1:1:2:2

# spaces
alt - 0 : yabai -m space --focus recent
alt - 1 : yabai -m space --focus 1
alt - 2 : yabai -m space --focus 2
alt - 3 : yabai -m space --focus 3
alt - 4 : yabai -m space --focus 4
